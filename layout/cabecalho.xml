	<layout class="LayoutCampo">
		<label align="left" text="Mira: " width="45"/>
		<edit type="number" keyboardType="numberPad" align="left" 
			horzTextAlign="center" field="mira" width="100"/>
	</layout>
	 -->

	<script>
		require('scripts/base.lua');
	</script>
	
</flowLayout> 